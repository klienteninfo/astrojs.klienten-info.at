---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

import { Image } from "@astrojs/image/components";

import I_2023_1 from "@assets/karten/weihnacht_2023-1.jpg";
import I_2023_2 from "@assets/karten/weihnacht_2023-2.jpg";

import I_2022_1 from "@assets/karten/2022-1.jpg";
import I_2022_2 from "@assets/karten/2022-2.jpg";

import I_2021_1 from "@assets/karten/2021.jpg";
import I_2021_2 from "@assets/karten/2021_back.jpg";

import I_2020_1 from "@assets/karten/2020-1.jpg";
import I_2020_2 from "@assets/karten/2020-2.jpg";

import I_2018_1 from "@assets/karten/2018.jpg";

import I_2017_1 from "@assets/karten/2017.jpg";

import I_2015_1 from "@assets/karten/2015_1200.jpg";
