import I_2009_1 from "@assets/karten/2009-09_1000px.jpg";
---

<Layout title="Weihnachtskarte">
  <Sectionhead>
    <Fragment slot="title">Weihnachtskarte</Fragment>
    <Fragment slot="desc"></Fragment>
  </Sectionhead>

  <Container>
    

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-center text-3xl text-gray-800">
        Alle Jahre wieder...
      </h2>
      <h3 class="text-center mb-5">wünschen wir ein frohes Weihnachtsfest und ein erfolgreiches Jahr 2023</h3>

      <div class="grid grid-cols-2 gap-2 m-auto max-w-xl place-content-center">
        <div>
          <a data-fslightbox="first-lightbox" href={I_2023_1.src}>
            <Image src={I_2023_1} format="avif" alt="Team" class="m-auto max-h-36" loading="none" />
          </a> 
        </div>
        <div>
          <a data-fslightbox="first-lightbox" href={I_2023_2.src}>
            <Image src={I_2023_2} format="avif" alt="Team" class="m-auto max-h-36" loading="none" />
          </a>
        </div>
      </div>

      <h2 class="font-bold text-center text-2xl mt-5 text-gray-800">
        Weihnachtsgrüße aus den Jahren 2010 - 2022.
