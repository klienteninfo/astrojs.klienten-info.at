---
import Container from "@components/container.astro";
import Layout from "./Layout.astro";
import Sectionhead from "@components/sectionhead.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>

  <Sectionhead>
    <Fragment slot="title">Karriere</Fragment>
    <Fragment slot="desc"></Fragment>
  </Sectionhead>

  <Container>
    <div class="mx-auto max-w-[735px] mt-14">
      <h1
        class="text-2xl text-ci-color-1 lg:text-3xl font-bold lg:tracking-tight mt-1 lg:leading-tight">
        {frontmatter.title}
      </h1>
      <h3 class="text-gray-500">{frontmatter.time}</h3>
    </div>

    <div class="leading-6 mx-auto text-normal prose mt-6 max-w-[735px]">
      <slot />
      <div class="text-left mt-12">
        <a
          href="/karriere"
          class="bg-ci-color-1 px-5 py-3 text-white rounded-md hover:bg-ci-color-2 transition"
          >← Zurück zu Karriere</a>
      </div>
    </div>
  
  </Container>
</Layout>
